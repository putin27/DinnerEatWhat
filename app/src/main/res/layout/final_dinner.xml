<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@mipmap/bg03">
    <TextView
        android:id="@+id/final_dinner_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="這一餐吃"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/final_dinner_tv_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="隨機店名"
        android:textAlignment="center"
        android:textColor="@color/colorMeal"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/final_dinner_tv_der"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="的"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/final_dinner_tv_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="隨機餐點"
        android:textAlignment="center"
        android:textColor="@color/colorMeal"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/final_dinner_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="價錢"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <Button
        android:id="@+id/final_dinner_b_choose_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onChooseAgainClick"
        android:text="再選一次" />

</LinearLayout>